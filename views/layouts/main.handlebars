<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie GO! | Home</title>
    <link rel="stylesheet" href="css/foundation.css" />
    <link rel="stylesheet" href="/public/css/style.css">
  </head>
  <body>
    <header>
        <h1>Movie GO!</h1>
    </header>

    <div>        
        <!--CAROUSEL DIV-->
        <div class="slideshow-container">
            <div class="mySlides fade">                
                <img src="./assets/AMC-Theatres.jpg" style="width:100%">
            </div>

        <div class="mySlides fade">        
        <img src="./assets/Cinemark_Theatres.jpg" style="width:100%">
        </div>

        <div class="mySlides fade">        
        <img src="./assets/Megaplex_Theatres.jpg" style="width:100%">
        </div>

        <a class="prev" onclick="plusSlides(-1)">❮</a>
        <a class="next" onclick="plusSlides(1)">❯</a>

        </div>
        <br>
        <div style="text-align:center">
            <span class="dot" onclick="currentSlide(1)"></span> 
            <span class="dot" onclick="currentSlide(2)"></span> 
            <span class="dot" onclick="currentSlide(3)"></span> 
        </div>
    
    </div>

    <main>        
        <section>
            <!--LEFT SIDE-->
            <div>
                <div>
                    <!--MOVIE THEATER SELECTED-->
                </div>
                <div>                    
                    <div>
                        <!--SELECTED MOVIE THEATER ADDRESS COMMENT/REVIEW-->
                    </div>
                    <div>
                        <input type="text">
                    </div>
                </div>
            </div>
            <!--RIGHT SIDE-->
            <div>
                <div>
                    <!--SELECTED MOVIE THEATER ADDRESSES-->
                </div>
            </div>
        </section>
    </main>

    <footer>

    </footer>
    <script src="js/vendor/jquery.js"></script>
    <script src="js/vendor/what-input.js"></script>
    <script src="js/vendor/foundation.min.js"></script>
    <script>
      $(document).foundation();
    </script>
    <script src="/public/js/script.js"></script>

  </body>
</html>